header#header.header
  .header__logo
    = image_tag 'logo.jpg', class: 'header__logo__img'
  .header__title
    = yield(:title)
  .header__menu
    ul.header__menu__list
      li.header__menu__list__item
        = fa_icon 'user', text: @current_user.name
      li.header__menu__list__item
        = link_to logout_path, method: :delete, class: 'header__menu__link' do
          = fa_icon 'sign-out', text: t('helpers.logout')
